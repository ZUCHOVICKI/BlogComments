<% content_for :page_title , @post.title %>

<section class="section">
    <div class="container">
        
        <nav class="level">
            <div class="content"><%= @post.content%></div>
          

            <div class="level-right">
                <p class="level-item">
                    <%= link_to "Edit",edit_post_path(@post) , class: "button" %>
                </p>
                <p class="level-item">
                  <%= link_to "Delete",post_path(@post),method: :delete,data:{confirm:"Are you sure?"} , class:"button is-danger" %>
                </p>
            </div>

        </nav>

        <hr>
        
        
    </div>
</section>

<section class=" section comments">

    <div class="container">
        <h2 class="subtitle"><%= @post.comments.count %> <strong>Comments</strong> </h2>
<%= render @post.comments %>

    </div>
    <div class="comments-form section">
        <h3 class="subtitle is-4">Leave a Comment ;)</h3>
        <%= render 'comments/form' %>

    </div>


</section>